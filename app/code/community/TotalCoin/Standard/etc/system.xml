<?xml version="1.0" ?>
<config>
    <sections>
        <payment translate="label">
            <groups>
      				<totalcoin_configuration>
      			    <label>TotalCoin</label>
                <sort_order>99</sort_order>
                <show_in_default>1</show_in_default>
                <show_in_website>1</show_in_website>
                <show_in_store>0</show_in_store>
                <fields>
                    <client_email>
                        <label>E-mail</label>
                        <frontend_type>text</frontend_type>
                        <sort_order>1</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>0</show_in_store>
                    </client_email>

                    <client_apikey>
                        <label>API Key</label>
                        <frontend_type>text</frontend_type>
                        <sort_order>2</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>0</show_in_store>
                    </client_apikey>

                    <merchant_id>
                        <label>Merchant Id</label>
                        <frontend_type>text</frontend_type>
                        <sort_order>3</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>0</show_in_store>
                    </merchant_id>

                    <type_checkout>
                      <label>Típo de Checkout</label>
                      <frontend_type>select</frontend_type>
                      <source_model>TotalCoin_Standard_Model_Source_TypeCheckout</source_model>
                      <sort_order>4</sort_order>
                      <show_in_default>1</show_in_default>
                      <show_in_website>1</show_in_website>
                      <show_in_store>1</show_in_store>
                    </type_checkout>

        						<country>
        							<label>País</label>
        							<frontend_type>select</frontend_type>
        							<source_model>TotalCoin_Standard_Model_Source_Country</source_model>
        							<sort_order>5</sort_order>
        							<show_in_default>1</show_in_default>
        							<show_in_website>1</show_in_website>
        							<show_in_store>1</show_in_store>
        						</country>

                    <currency>
                      <label>Moneda</label>
                      <frontend_type>select</frontend_type>
                      <source_model>TotalCoin_Standard_Model_Source_Currency</source_model>
                      <sort_order>6</sort_order>
                      <show_in_default>1</show_in_default>
                      <show_in_website>1</show_in_website>
                      <show_in_store>1</show_in_store>
                    </currency>

                    <methods>
                      <label>Métodos de Pago</label>
                      <frontend_type>multiselect</frontend_type>
                      <source_model>TotalCoin_Standard_Model_Source_Method</source_model>
                      <sort_order>7</sort_order>
                      <show_in_default>1</show_in_default>
                      <show_in_website>1</show_in_website>
                      <show_in_store>1</show_in_store>
                    </methods>
                </fields>
      				</totalcoin_configuration>
            </groups>
        </payment>
    </sections>
</config>
